<div class="absolute left-4 top-4 flex items-center gap-4">
  <div data-chat-target="status" class="flex items-center gap-2">
        <span class="text-sm text-gray-600">Loading the LLM</span>
        <div class="w-32 h-2 bg-gray-200 rounded-full">
            <div data-chat-target="progress" style="width: 0%" class="h-full bg-gradient-to-r from-purple-600 to-blue-600 rounded-full animate-pulse"></div>
        </div>
    </div>
</div>
<div class="absolute right-4 top-4 flex items-center gap-4" style="z-index: 20">
    <%= button_tag  id: "download", style: "background-color: #BBB", data: {controller: "lock", action: "click->lock#download"},
        class: "p-2 px-3 text-white rounded-lg text-sm hover:opacity-90 transition flex items-center gap-2" do %>
        <%= tag.i("", class:"fa-solid fa-download") %> Download
    <% end %>
    <%= button_tag  id: "about", style: "background-color: #BBB",
        class: "p-2 px-3 text-white rounded-lg text-sm hover:opacity-90 transition flex items-center gap-2" do %>
        <%= tag.i("", class:"fa-solid fa-circle-info") %> <%= tag.span "About" %>
    <% end %>
</div>